#!/usr/bin/env bash

# === ZSH Plugins management ===

if [ uname == 'Darwin' ]
  ZPLUG_HOME='/usr/local/opt/zplug'
  export ZPLUG_HOME
  source "$HOME/.zplugrc"
fi

# === Shell stuff ===

source "$HOME/.shell/exports"
source "$HOME/.shell/aliases"
source "$HOME/.shell/functions"
source "$HOME/.shell/external"


# === Local variables and overrides ===

if [[ -f "$HOME/.shell/local" ]]; then
  source "$HOME/.shell/local"
fi
